{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "paths": {
          "*": [
              "node_modules/*"
          ]
      },
      "typeRoots": [
        "./types",
        "./node_modules/@types"
      ]
  },
  "include": [
      "bin/**/*",
      "types"
  ],
  "exclude": [
    "node_modules"
  ]
}